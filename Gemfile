gem 'sidekiq'       # paralel jobs

# assets
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'haml-rails'
gem 'sass-rails'
gem 'coffee-rails'
gem 'therubyracer'
gem 'uglifier'
gem 'colored'

group :development do
  gem 'erd'
  gem 'pry'
  gem 'pry-debugger'
  gem 'mina'
  gem 'sinatra', require: false
  gem 'slim'
  gem 'mechanize'
  gem 'awesome_print'
  gem 'rails-erd'
  gem 'better_errors'
  gem 'binding_of_caller'
end
